{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@controllers/*": ["controllers/*"],
      "@context": ["context"],
      "@errors": ["errors"],
      "@hooks": ["hooks"],
      "@images/*": ["images/*"],
      "@interfaces": ["interfaces"],
      "@layouts": ["layouts"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@strings": ["strings"],
      "@tables": ["tables"],
      "@utils": ["utils"],
      "@views/*": ["views/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/"],
  "exclude": ["node_modules", "src/_mocks"]
}
